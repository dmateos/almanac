<div class="row">
  <div class="col-lg-4">
    <div class="row">
      LOGO 
    </div>
    <div class="row">
      <ul class="list-group">
        <% @organisation.subjects.each do |s| %>
          <li class="list-group-item"> 
            <span class="badge"> <%= "#{s.organisations.count}" %> </span>
            <%= link_to s.name, s %> 
          </li>
        <% end %>
      </li>
    </div>
  </div>

  <div class="col-lg-8">
    <h2> <%= @organisation.name %> </h2>
    <h4> formerly <%= @organisation.former_name %> </h4>

    <div class="thumbnail">
      <div class="row">
        <div class="col-lg-6">
          <div> <%= @organisation.street_address %> </div>

          <% @contact_group.each do |c, n| %>
            <% n.each do |k| %>
              <div>
                <%= k.c_value %>
              </div>
            <%end %>
          <% end %>
        </div>
        <div class="col-lg-6">

        </div>
      </div>
    </div>

    <div>
      <%= @organisation.comment %>
    </div>

    <div class="thumbnail">
      <%= @organisation.services %>
    </div>
  </div>
</div>
